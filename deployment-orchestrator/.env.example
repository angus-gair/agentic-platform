# Environment Variables for ajinsights.app Deployment
# Copy this file to .env and fill in the actual values

# ===========================================
# LLM API Keys (Required)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
XAI_API_KEY=xai-your-xai-key-here

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=admin
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=agentic_platform
REDIS_PASSWORD=your-secure-redis-password

# ===========================================
# Monitoring Credentials
# ===========================================
PROMETHEUS_USER=prom
PROMETHEUS_PASSWORD=your-prometheus-password
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=your-grafana-admin-password

# ===========================================
# Optional MCP Server Keys
# ===========================================
BRAVE_API_KEY=your-brave-search-api-key
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ===========================================
# Domain Configuration
# ===========================================
DOMAIN_BASE=ajinsights.app
WEBSITE_DOMAIN=www.ajinsights.app
PLATFORM_DOMAIN=agentic-ai.ajinsights.app
DOCS_DOMAIN=docs.ajinsights.app
MONITORING_DOMAIN=monitoring.ajinsights.app

# ===========================================
# Server Configuration
# ===========================================
SERVER_IP=193.181.208.69
SERVER_NAME=thunder1.vps.webdock.cloud